<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#848484"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageTitulo1"
        android:layout_width="315dp"
        android:layout_height="223dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logobreaking" />

    <Button
        android:id="@+id/btnpersonajes"
        android:layout_width="285dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#144d3a"
        android:text="Personajes"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageTitulo1" />

    <Button
        android:id="@+id/btncitas"
        android:layout_width="277dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#144d3a"
        android:text="FRASES COMUNES"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnepisodios" />

    <Button
        android:id="@+id/btnfallecidos"
        android:layout_width="290dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#144d3a"
        android:text="personajes fallecidos"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btncitas" />

    <Button
        android:id="@+id/btnepisodios"
        android:layout_width="291dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#144d3a"
        android:text="Episodios"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnpersonajes" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="195dp"
        android:layout_height="225dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.277"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnfallecidos"
        app:srcCompat="@drawable/walter" />
</androidx.constraintlayout.widget.ConstraintLayout>